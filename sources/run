

function build_jar
{
mvn compile assembly:single
}

_name="$0"
function print_usage
{
echo "usage: $_name [-h] [-c] [-b]"
}


_dir="../target"
_target="$_dir/testReporter-jar-with-dependencies.jar"

while getopts "cb" o; do
case $o in
  c)
    mvn clean
    rm -rf $_dir
    ;;
  b)
    build_jar
    exit 0
    ;;
  \?)
    exit 1
    ;;
esac
done


if [ ! -f $_target ]
then
  build_jar
fi

if [ ! -d $_dir ]
then
  exit 1
fi

echo ""
java -jar $_target

